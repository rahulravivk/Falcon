<launch>
    <let name="urdf_path"
        value="$(find-pkg-share project1_description)/urdf/robot_1.urdf" />
    <let name="rviz_config_path"
        value="$(find-pkg-share project1_description)/rviz/urdf_config_bringup.rviz" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
            value="$(command 'cat $(var urdf_path)')" />
    </node>

    <node pkg="controller_manager" exec="ros2_control_node">
        <param name="robot_description"
            value="$(command 'cat $(var urdf_path)')" />
        <param from="$(find-pkg-share project1_bringup)/config/carlikebot_controllers.yaml" />
    </node>

    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />
    <node pkg="controller_manager" exec="spawner" args="bicycle_steering_controller" />

    <!-- Relay TF from controller to /tf topic -->
    <node pkg="topic_tools" exec="relay" args="/bicycle_steering_controller/tf_odometry /tf" />

    <node pkg="rviz2" exec="rviz2" output="screen"
        args="-d $(var rviz_config_path)" />
</launch>